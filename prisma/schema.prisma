generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  COMPANY_ADMIN
}

enum CompanyStatus {
  ACTIVE
  SUSPENDED
  CANCELLED
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PAID
  FAILED
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CARD
  MOBILE_MONEY
}

enum PaymentProvider {
  STRIPE
  FEDAPAY
}

enum MobileMoneyOperator {
  MTN
  ORANGE
  MOOV
  WAVE
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum Currency {
  USD
  EUR
  XOF
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String
  hashedPassword String
  role           Role     @default(COMPANY_ADMIN)
  companyId      String?
  company        Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([companyId])
  @@index([email])
}

model Company {
  id                      String        @id @default(cuid())
  name                    String
  slug                    String        @unique
  email                   String?
  neonProjectId           String
  neonApiKeyEncrypted     String
  neonApiKeyIv            String
  neonApiKeyTag           String
  neonOrgId               String?
  billingMarkupPercentage Float         @default(20.0)
  currency                Currency      @default(USD)
  stripeCustomerId        String?       @unique
  status                  CompanyStatus @default(ACTIVE)
  alertThresholdAmount    Int?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  users        User[]
  usageRecords UsageRecord[]
  invoices     Invoice[]

  @@index([slug])
  @@index([status])
}

model UsageRecord {
  id                          String   @id @default(cuid())
  companyId                   String
  company                     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  periodStart                 DateTime
  periodEnd                   DateTime
  computeUnitSeconds          Float    @default(0)
  rootBranchBytesMonth        Float    @default(0)
  childBranchBytesMonth       Float    @default(0)
  instantRestoreBytesMonth    Float    @default(0)
  publicNetworkTransferBytes  Float    @default(0)
  privateNetworkTransferBytes Float    @default(0)
  writtenDataBytes            Float    @default(0)
  extraBranchesMonth          Float    @default(0)
  estimatedCostNeonCents      Int      @default(0)
  billedAmountCents           Int      @default(0)
  fetchedAt                   DateTime @default(now())
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt

  @@unique([companyId, periodStart])
  @@index([companyId, periodStart])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  companyId     String
  company       Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  amountCents   Int
  currency      Currency
  status        InvoiceStatus @default(DRAFT)
  periodStart   DateTime
  periodEnd     DateTime
  dueDate       DateTime
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  payments Payment[]

  @@index([companyId, status])
  @@index([status])
  @@index([dueDate])
}

model Payment {
  id                    String               @id @default(cuid())
  invoiceId             String
  invoice               Invoice              @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  method                PaymentMethod
  provider              PaymentProvider
  mobileMoneyOperator   MobileMoneyOperator?
  externalTransactionId String?              @unique
  amountCents           Int
  currency              Currency
  status                PaymentStatus        @default(PENDING)
  failureReason         String?
  paidAt                DateTime?
  rawWebhookPayload     Json?
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt

  @@index([invoiceId])
  @@index([externalTransactionId])
  @@index([status])
}
